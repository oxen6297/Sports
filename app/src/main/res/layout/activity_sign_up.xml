<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/community"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="AppName에 오신것을 환영합니다!"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_logo" />

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="이름"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/name_edit"
                app:layout_constraintTop_toBottomOf="@+id/welcome_text" />

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/email_edit_background"
                android:elevation="5dp"
                android:hint="이름을 입력해주세요"
                android:paddingLeft="20dp"
                android:textColorHint="#D8D8D8"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@id/nickname_edit"
                app:layout_constraintTop_toBottomOf="@id/name_text" />

            <TextView
                android:id="@+id/nickname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:text="별명"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/nickname_edit"
                app:layout_constraintTop_toBottomOf="@+id/name_edit" />

            <EditText
                android:id="@+id/nickname_edit"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/email_edit_background"
                android:elevation="5dp"
                android:hint="별명을 입력해주세요"
                android:paddingLeft="20dp"
                android:textColorHint="#D8D8D8"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickname_text" />

            <TextView
                android:id="@+id/check_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:text="별명을 입력해주세요!"
                app:layout_constraintStart_toStartOf="@id/nickname_edit"
                app:layout_constraintTop_toBottomOf="@id/nickname_edit" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:text="휴대폰 인증"
                android:textStyle="bold"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/nickname_edit"
                app:layout_constraintTop_toBottomOf="@+id/check_nickname" />

            <EditText
                android:id="@+id/phone_number_edit"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/email_edit_background"
                android:elevation="5dp"
                android:hint="ex) 01012345678"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:textColorHint="#D8D8D8"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@id/nickname_edit"
                app:layout_constraintTop_toBottomOf="@+id/phone_text" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/email_edit_background"
                android:text="인증번호 전송"
                android:textColor="#BCBCBC"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="@+id/phone_number_edit"
                app:layout_constraintEnd_toEndOf="@+id/join_email_edit"
                app:layout_constraintStart_toEndOf="@+id/phone_number_edit" />

            <EditText
                android:id="@+id/sms_edit"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/email_edit_background"
                android:elevation="5dp"
                android:hint="인증번호"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:textColorHint="#D8D8D8"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@id/nickname_edit"
                app:layout_constraintTop_toBottomOf="@+id/phone_number_edit" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/email_edit_background"
                android:text="인증번호 확인"
                android:textColor="#BCBCBC"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="@+id/sms_edit"
                app:layout_constraintEnd_toEndOf="@+id/join_email_edit"
                app:layout_constraintStart_toEndOf="@+id/phone_number_edit" />

            <TextView
                android:id="@+id/check_sms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:text="인증번호가 맞지 않습니다"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/sms_edit"
                app:layout_constraintTop_toBottomOf="@id/sms_edit" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:text="이메일"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/join_email_edit"
                app:layout_constraintTop_toBottomOf="@+id/check_sms_text" />

            <EditText
                android:id="@+id/join_email_edit"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/email_edit_background"
                android:elevation="5dp"
                android:hint="이메일을 입력해주세요"
                android:paddingLeft="20dp"
                android:textColorHint="#D8D8D8"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_text" />

            <TextView
                android:id="@+id/check_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:text="이메일을 입력해주세요!"
                app:layout_constraintStart_toStartOf="@id/join_email_edit"
                app:layout_constraintTop_toBottomOf="@id/join_email_edit" />

            <TextView
                android:id="@+id/password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:text="비밀번호"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/join_email_edit"
                app:layout_constraintTop_toBottomOf="@+id/check_email_text" />

            <EditText
                android:id="@+id/join_password_edit"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/email_edit_background"
                android:elevation="5dp"
                android:hint="비밀번호를 입력해주세요"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColorHint="#D8D8D8"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_text" />

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/email_edit_background"
                android:elevation="5dp"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColorHint="#D8D8D8"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/join_password_edit" />

            <TextView
                android:id="@+id/confirm_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:text="비밀번호가 일치하지 않습니다"
                app:layout_constraintStart_toStartOf="@id/confirm_password"
                app:layout_constraintTop_toBottomOf="@id/confirm_password" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/agree_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@id/confirm_password"
                app:layout_constraintTop_toBottomOf="@id/confirm_password_text">

                <CheckBox
                    android:id="@+id/agree_check_box"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/agree_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:text="약관에 동의합니다.(필수)" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/agree_layout_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/agree_layout"
                app:layout_constraintTop_toBottomOf="@id/agree_layout">

                <CheckBox
                    android:id="@+id/agree_check_box_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/agree_text_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:text="약관에 동의합니다.(선택)" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <Button
                android:id="@+id/create_account"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/login_btn"
                android:gravity="center"
                android:text="회원가입 완료"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/agree_layout_two" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>