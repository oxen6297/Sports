<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/group_item_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/kakao_default_profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/number_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_member"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:text="14/15"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/group_item_image"
        app:layout_constraintBottom_toBottomOf="@+id/group_item_image"/>


    <TextView
        android:id="@+id/group_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="당구"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/group_item_image"
        app:layout_constraintEnd_toEndOf="@+id/group_item_image"
        app:layout_constraintTop_toBottomOf="@+id/group_item_image"/>

    <TextView
        android:id="@+id/group_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="5분남음"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/group_item_image"
        app:layout_constraintEnd_toEndOf="@+id/group_item_image"
        app:layout_constraintTop_toBottomOf="@+id/group_item_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>